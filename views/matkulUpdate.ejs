<!-- index.ejs -->
<div class="w-full h-fit flex justify-center">
  <div class="bg-white w-5/12 p-5 rounded-[20px] h-auto m-4 flex flex-row justify-center">
    <form action="/matkul/update" class="w-11/12" method="POST">
      <h1 class="mb-2 text-2xl font-bold">Update Data Mahasiswa</h1>
      <input type="text" name="id" value="<%= matkul.id %>" style="display: none;">
      <label for="kode_matkul">NIM</label><br>
      <input type="number" name="kode_matkul" id="kode_matkul" value="<%= matkul.kode_matkul %>" class="mb-2 border border-gray-300 focus:outline-none focus:border-[#2a2185] focus:ring-1 focus:ring-[#2a2185] px-3 py-2 rounded-md w-full" required>
      <br>
      <label for="nama_matkul">Nama</label>
      <input type="text" name="nama_matkul" id="nama_matkul" value="<%= matkul.nama_matkul %>" class="mb-2 border border-gray-300 focus:outline-none focus:border-[#2a2185] focus:ring-1 focus:ring-[#2a2185] px-3 py-2 rounded-md w-full" required>
      <br>
      <label for="sks">Alamat</label>
      <input type="number" name="sks" id="sks" value="<%= matkul.sks %>" class="mb-2 border border-gray-300 focus:outline-none focus:border-[#2a2185] focus:ring-1 focus:ring-[#2a2185] px-3 py-2 rounded-md w-full" required>
      <br>
      <button class="p-2 text-sm rounded-full bg-emerald-500 text-white" type="submit">Update</button>
    </form>
  </div>
</div>

