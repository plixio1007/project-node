<div class="w-full h-fit flex justify-center">
  <div class="bg-white w-5/12 p-5 rounded-[20px] h-auto m-4 flex flex-row justify-center">
    <form action="/mahasiswa/tambah" class="w-11/12" method="POST">
        <h1 class="mb-2 text-2xl font-bold">Input Data Mahasiswa</h1>
        <label for="nim">NIM</label><br>
        <input type="nim" name="nim" id="nim" class="mb-2 border border-gray-300 focus:outline-none focus:border-[#2a2185] focus:ring-1 focus:ring-[#2a2185] px-3 py-2 rounded-md w-full" required>
        <br>
        <label for="nama">Nama</label><br>
        <input type="text" name="nama" id="nama" class="mb-2 border border-gray-300 focus:outline-none focus:border-[#2a2185] focus:ring-1 focus:ring-[#2a2185] px-3 py-2 rounded-md w-full" required>
        <br>
        <label for="email">Email</label><br>
        <input type="email" name="email" id="email" class="mb-2 border border-gray-300 focus:outline-none focus:border-[#2a2185] focus:ring-1 focus:ring-[#2a2185] px-3 py-2 rounded-md w-full" required>
        <br>
        <label for="alamat">Alamat</label><br>
        <input type="alamat" name="alamat" id="alamat" class=" mb-2 border border-gray-300 focus:outline-none focus:border-[#2a2185] focus:ring-1 focus:ring-[#2a2185] px-3 py-2 rounded-md w-full" required>
        <br>
        <button class="p-2 text-sm rounded-full bg-emerald-500 text-white" type="submit">Simpan</button>
    </form>
  </div>
</div>
